.container
  .row.grid-divider
    .col-sm-4
      .col-padding
        %h3 Acceptted game requests
        - if !@invitations.nil?
          = render 'games/invitation'
        - else 
          %p There is no invitations for the moment 
    .col-sm-4
      .col-padding
        %h3 Column 2
        = link_to 'Add Games', new_game_path, class: 'btn btn-primary btn-lg'
        - @games.each do |game|
          .card{:style => "width: 20rem;"}
            %p[game]
            %img.card-img-top{:alt => "Card image cap", :src => "#{game.user.avatar}"}/
            .card-block
              %h4.card-title= game.user.name
              %p.card-text Game Location : "#{game.address}"
              = link_to "Join Game" , game_invitations_path(game), class: "btn btn-primary" ,:method => :post

    